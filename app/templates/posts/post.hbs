<div class="font-sans">
  <span class="text-base md:text-sm text-teal-500 font-bold">&lt;</span>
  <LinkTo @route="posts" class="text-base md:text-sm text-teal-500 font-bold no-underline hover:underline">BACK TO BLOG</LinkTo>
  <h1 class="font-bold font-sans break-normal text-gray-900 pt-6 pb-2 text-3xl md:text-4xl">{{this.model.name}}</h1>
</div>

<div class="flex w-full items-center font-sans p-4">
  <img class="w-10 h-10 rounded-full mr-4" src="{{this.model.author.avatarUrl}}" alt="Avatar of Author">
  <div class="flex-1 px-2">
    <p class="text-base font-bold text-base md:text-xl leading-none mb-2">{{this.model.author.name}}</p>
    <p class="text-gray-600 text-xs md:text-base">{{this.model.createdAt}}</p>
  </div>
</div>

<p data-test-post-body>
  {{this.model.body}}
</p>

<div class="pt-12">
  <h3>Comments</h3>
  {{#if this.comments.isRunning}}
    <span data-test-comments-loading>Loading comments...</span>
  {{else}}
    <div data-test-post-comments>
      {{#each this.model.comments as |comment|}}
        <Comment @comment={{comment}}/>
      {{/each}}
    </div>
  {{/if}}
</div>
